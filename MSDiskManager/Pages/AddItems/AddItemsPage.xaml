<Page x:Class="MSDiskManager.Pages.AddItems.AddItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MSDiskManager.Pages.AddItems"
             xmlns:helpers="clr-namespace:MSDiskManager.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1080"
      DataContext="{Binding AddItemsViewModel}"
      Title="AddItemsPage">
    <Page.Resources>
        <helpers:TypeToIconSourceConverter x:Key="TypeToIconSourceConverter"/>
        <helpers:DoubleDividerConverter x:Key="DoubleDividerConverter"/>
        <Style TargetType="Border" x:Key="SexyDarkBorder">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="Padding" Value="8 2"/>
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="Background" Value="#B3000000"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Style.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource textColor}"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Border Background="{StaticResource primary}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Grid.Row="0" Grid.Column="0">
                <TextBlock Text="Directories"/>
            </Label>
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="0" Grid.Column="1">
                <TextBlock  Text="Files"/>
            </Label>
            <ListView x:Name="DirListView"
                Background="{StaticResource primary}" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Items}" d:ItemsSource="{x:Static local:MockData.Directories}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxWidth="{Binding ElementName=FileListView,Path=ActualWidth}" MaxHeight="{Binding ElementName=FileListView,Path=ActualHeight}"  Margin="0" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="Left" 
                                Width="{Binding ElementName=FileListView,Path=ActualWidth,Converter={StaticResource DoubleDividerConverter},ConverterParameter=3.3}"
                            BorderBrush="White" BorderThickness="1" Margin="-3 0 0 0" Padding="5 5" >
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="WrapWithOverflow"  FontSize="7"  Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="4" Text="{Binding OriginalPath}" TextAlignment="Center" Margin="0 0 0 5" Foreground="DarkGray"/>
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" >
                                    <TextBlock FontSize="10"  Grid.Row="1"  Grid.Column="0" HorizontalAlignment="Center" Text="  Name  "/>
                                    <TextBox FontSize="10" TextAlignment="Center" Grid.Row="1" Grid.Column="1" Text="{Binding Name,Mode=TwoWay}"/>
                                </StackPanel>
                                <WrapPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Center">
                                    <CheckBox FontSize="8" VerticalContentAlignment="Center" Content="Hidden" IsChecked="{Binding IsHidden}"/>
                                    <TextBlock  FontSize="8" Text=" | " Margin="0 -1 0 0" Foreground="Black"/>
                                    <CheckBox FontSize="8"  VerticalContentAlignment="Center" Content="Selected" IsChecked="{Binding IsSelected}"/>
                                    <TextBlock FontSize="8" Text=" | " Margin="0 -1 0 0" Foreground="Black"/>
                                    <CheckBox FontSize="8"  VerticalContentAlignment="Center" Content="Ignore" IsChecked="{Binding IgnoreAdd}"/>
                                </WrapPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView x:Name="FileListView"
                Background="{StaticResource primary}" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Items}" d:ItemsSource="{x:Static local:MockData.Files}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxWidth="{Binding ElementName=FileListView,Path=ActualWidth}" MaxHeight="{Binding ElementName=FileListView,Path=ActualHeight}"  Margin="0" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="Left" 
                                Width="{Binding ElementName=FileListView,Path=ActualWidth,Converter={StaticResource DoubleDividerConverter},ConverterParameter=2.07}"
                                Height="{Binding ElementName=FileListView,Path=ActualWidth,Converter={StaticResource DoubleDividerConverter},ConverterParameter=2.5}"
                            BorderBrush="White" BorderThickness="2" Margin="-4 -3 0 0" Padding="5 5" >
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Image}" Stretch="UniformToFill" />
                            </Border.Background>
                            <Grid >
                                <Grid.Background>
                                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                                </Grid.Background>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="WrapWithOverflow" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"    Text="{Binding OriginalPath}"  FontSize="10" Margin="0 0 0 5" Foreground="DarkGray"/>

                                <TextBlock  FontSize="10" Grid.Row="1"  TextAlignment="Center" Text="  Name:  "/>
                                <TextBox FontSize="10" TextAlignment="Center" Background="#B2FFFFFF" Grid.Row="2"  Text="{Binding Name,Mode=TwoWay}"/>
                                

                                <WrapPanel HorizontalAlignment="Center"  Grid.Row="3" Orientation="Horizontal" >
                                    <CheckBox FontSize="10" Content="Hidden" IsChecked="{Binding IsHidden}"/>
                                    <TextBlock FontSize="10" Text=" | " Margin="0 -1 0 0" Foreground="Black"/>
                                    <CheckBox FontSize="10" Content="Selected" IsChecked="{Binding IsSelected}"/>
                                    <TextBlock FontSize="10" Text=" | " Margin="0 -1 0 0" Foreground="Black"/>
                                    <CheckBox FontSize="10" Content="Ignore" IsChecked="{Binding IgnoreAdd}"/>
                                </WrapPanel>
                                <Image Width="20"  Height="20" Grid.Row="4" 
                                   Source="{Binding IconType, Converter={StaticResource TypeToIconSourceConverter}}"
                                   d:Source="{Binding IconType,Converter={StaticResource TypeToIconSourceConverter}}" 
                                   />
                                
                                <ListView Grid.Row="5"  ItemsSource="{Binding Tags}" d:ItemsSource="{x:Static local:MockData.Tags}">
                                    <ListView.Style>
                                        <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
                                            <Style.Resources>
                                                <Style TargetType="ScrollBar">
                                                    <Setter Property="Width" Value="auto"/>
                                                    <Setter Property="MinWidth" Value="5"/>
                                                    <Setter Property="MaxWidth" Value="1000"/>
                                                    <Setter Property="Height" Value="5"/>
                                                    <Setter Property="MinHeight" Value="5"/>
                                                    <Setter Property="MaxHeight" Value="5"/>
                                                    <Setter Property="Background" Value="Black"/>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </ListView.Style>
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Name}"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <TextBlock FontSize="10" Grid.Row="6" TextAlignment="Center" Text="  Description:  "/>

                                <TextBox FontSize="10" TextAlignment="Center"  Background="#B2FFFFFF" Grid.Row="7"  Text="{Binding Description,Mode=TwoWay}"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</Page>
